---
import { site } from "../config/site";
---
<header class="border-b border-gray-200 bg-white/70 backdrop-blur supports-[backdrop-filter]:bg-white/60">
  <div class="mx-auto max-w-6xl px-4 py-4 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3">
      <img src="/logo.svg" alt={site.name} class="h-8 w-8" />
      <span class="text-lg font-semibold text-gray-900">{site.name}</span>
    </a>
    <!-- Desktop Nav -->
    <nav class="hidden md:flex items-center gap-6 text-sm text-gray-700">
      <a class="hover:text-gray-900" href="/">Home</a>
      <a class="hover:text-gray-900" href="/about">About</a>
      <a class="hover:text-gray-900" href="/basics">Basics</a>
      <a class="hover:text-gray-900" href="/advanced">Advanced</a>
      <a class="hover:text-gray-900" href="/applications">Applications</a>
      <a class="flex items-center gap-2 hover:text-gray-900" href={site.githubUrl} target="_blank" rel="noopener noreferrer">
        <img src="/icons/github.svg" alt="GitHub" class="h-4 w-4" />
        <span>Source</span>
      </a>
    </nav>

    <!-- Mobile Menu Toggle -->
    <details class="md:hidden relative">
      <summary class="list-none inline-flex h-10 w-10 items-center justify-center rounded-md border border-gray-300 text-gray-700 hover:bg-gray-50 cursor-pointer" aria-label="Open menu">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="3" y1="6" x2="21" y2="6" />
          <line x1="3" y1="12" x2="21" y2="12" />
          <line x1="3" y1="18" x2="21" y2="18" />
        </svg>
      </summary>
      <div class="absolute right-0 mt-2 w-56 rounded-md border border-gray-200 bg-white shadow-lg p-2 flex flex-col text-sm text-gray-700 z-50">
        <a class="px-3 py-2 rounded hover:bg-gray-50" href="/">Home</a>
        <a class="px-3 py-2 rounded hover:bg-gray-50" href="/about">About</a>
        <a class="px-3 py-2 rounded hover:bg-gray-50" href="/basics">Basics</a>
        <a class="px-3 py-2 rounded hover:bg-gray-50" href="/advanced">Advanced</a>
        <a class="px-3 py-2 rounded hover:bg-gray-50" href="/applications">Applications</a>
        <a class="px-3 py-2 rounded hover:bg-gray-50 flex items-center gap-2" href={site.githubUrl} target="_blank" rel="noopener noreferrer">
          <img src="/icons/github.svg" alt="GitHub" class="h-4 w-4" />
          <span>Source</span>
        </a>
      </div>
    </details>
  </div>
  </header>

